{
  "name": "protobuf",
  "publisher": "jeongukjae",
  "license": "MIT",
  "displayName": "protobuf",
  "description": "A VSCode Extension for Protocol Buffers",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters",
    "Formatters",
    "Testing"
  ],
  "activationEvents": [
    "onCommand:protobuf.helloWorld",
    "onLanguage:protobuf3",
    "onLanguage:textproto"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "protobuf.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "protobuf3",
        "extensions": [
          ".proto"
        ],
        "aliases": [
          "Protocol Buffers 3"
        ]
      },
      {
        "id": "textproto",
        "extensions": [
          ".textproto",
          ".textpb",
          ".prototext",
          ".prototxt",
          ".pbtxt"
        ],
        "aliases": [
          "Protocol Buffers Text Format"
        ],
        "configuration": "./languages/textproto.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "textproto",
        "scopeName": "source.textproto",
        "path": "./syntaxes/textproto.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.2"
  }
}
