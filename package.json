{
  "name": "protobuf",
  "publisher": "jeongukjae",
  "license": "MIT",
  "displayName": "protobuf",
  "description": "A VSCode Extension for Protocol Buffers",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters",
    "Formatters",
    "Testing"
  ],
  "activationEvents": [
    "onCommand:protobuf.helloWorld",
    "onLanguage:protobuf3",
    "onLanguage:textproto"
  ],
	"main": "./client/out/extension.js",
  "contributes": {
    "configuration": {
			"type": "object",
			"title": "Protocol Buffers Configuration",
      "properties": {
      }
    },
    "commands": [
      {
        "command": "protobuf.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "protobuf3",
        "extensions": [
          ".proto"
        ],
        "aliases": [
          "Protocol Buffers 3"
        ]
      },
      {
        "id": "textproto",
        "extensions": [
          ".textproto",
          ".textpb",
          ".prototext",
          ".prototxt",
          ".pbtxt"
        ],
        "aliases": [
          "Protocol Buffers Text Format"
        ],
        "configuration": "./languages/textproto.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "textproto",
        "scopeName": "source.textproto",
        "path": "./syntaxes/textproto.tmLanguage.json"
      },
      {
        "language": "protobuf3",
        "scopeName": "source.protobuf3",
        "path": "./syntaxes/protobuf3.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && yarn && cd ../server && yarn && cd .."
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "eslint": "^8.34.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  }
}
